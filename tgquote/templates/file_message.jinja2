{% block document %}
	{% set document = files.get_document(message) %}
	{% set thumb = files.get_thumb(message) %}
	{% if document %}
		{% if thumb %}
			<img class="document-image" src="{{
			  utils.base64ToUrl(
			    files.get_file(thumb.file_id),
			    document.mime_type or 'image/jpeg'
			  )
			}}">
		{% endif %}
	{% endif %}
{% endblock %}