{% for message in messages %}

{% set user_id = message.get('sender_chat', {}).get('id') or message.from.id %}
<img class="author-user-pic" src="{{
      utils.base64ToUrl(
        files.get_userpic(user_id),
        'image/jpeg'
      )
    }}">

<div class="message">
  <div class="author-user-name author-user-color-{{user_id%7}}">
    {{message.from.first_name}} {{message.from.last_name or ''}}
  </div>
  {% set document = files.get_document(message) %}
  {% if document %}
    <img class="message-image" src="{{
      utils.base64ToUrl(
        files.get_file(document.file_id),
        document.mime_type or 'image/jpeg'
      )
    }}">
  {% endif %}
  <div class="message-text">{{message.text or message.caption}}</div>
</div>

{% endfor %}